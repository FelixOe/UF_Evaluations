@model UFEvaluations.Models.CollegeListViewModel

@{
    ViewBag.Title = "Colleges";
}

<h2>Colleges</h2>

<div class="top-area">
    <div class="row">
        <div class="col-md-12">
            <ul class="top-list list-group">
                @foreach (var college in Model.colleges)
                {
                    <li class="top-list-element list-group-item"><span class="pull-left">@Html.ActionLink(college.Key, "Detail", "Colleges", new { college = GlobalFunctions.escapeQuerystringElement(college.Key) }, null)</span><span class="pull-right">@college.Value</span></li>
                }
            </ul>
        </div>
    </div>
</div>